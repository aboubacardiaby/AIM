                //    width: '23%'
                //},
                //Promised_Date: {
                //    title: 'Promised_Date',
                //    width: '23%',
                //     type: 'date',
                //        displayFormat: 'yy-mm-dd'
                //},
                //Promised_Time: {
                //    title: 'Promised_Time',
                //    width: '23%'
                //},

                Carrier: {
                    title: 'Carrier',
                    width: '12%'
                },
                //Trailer_Number: {
                //    title: 'Trailer_Number',
                //    width: '12%'
                //},
                // Seal_Number: {
                //    title: 'Seal#',
                //    width: '12%'
                //},
                //Customer_PO: {
                //    title: 'Customer_PO',
                //    width: '12%'
                //},
                Quantity: {
                    title: 'Quantity',
                    width: '12%'
                },
                Size: {
                    title: 'Size',
                    width: '12%'
                },
                Neck_Size: {
                    title: 'Neck_Size ',
                    width: '12%'
                },
                CAN_END: {
                    title: 'CAN_END ',
                    width: '12%'
                },

            }
        });
        $('#BeverasaleContainer').jtable('load', {});
        //Load student list from server
        $('#LoadRecordsButton').click(function (e) {
            e.preventDefault();
            $('#BeverasaleContainer').jtable('load', {
                Item_Code: $('#Item_Code').val(),

            });
        });
    }

    </script>

